<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        //Decision
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:text="Decision"
            android:textAllCaps="true"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#888888"
            android:layout_marginBottom="6dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:tag="details">

            <LinearLayout
                android:layout_width="48dip"
                android:layout_height="64dip"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:src="@drawable/allow" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="64dip"
                android:gravity="center_vertical"
                android:paddingLeft="6dip"
                android:text="Allow"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textIsSelectable="false" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:tag="details">

            <LinearLayout
                android:layout_width="48dip"
                android:layout_height="64dip"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:src="@drawable/obfuscate" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="64dip"
                android:gravity="center_vertical"
                android:paddingLeft="6dip"
                android:text="Obfuscate"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textIsSelectable="false" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:tag="details">

            <LinearLayout
                android:layout_width="48dip"
                android:layout_height="64dip"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:src="@drawable/deny" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="64dip"
                android:gravity="center_vertical"
                android:paddingLeft="6dip"
                android:text="Deny"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textIsSelectable="false" />
        </LinearLayout>

        //Decision Type
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:text="Decision Type"
            android:textAllCaps="true"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="6dp"
            android:background="#888888" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:tag="details">

            <LinearLayout
                android:layout_width="48dip"
                android:layout_height="64dip"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:src="@drawable/stat" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="64dip"
                android:gravity="center_vertical"
                android:paddingLeft="6dip"
                android:text="Static policy (allow without prompting)"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textIsSelectable="false" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:tag="details">

            <LinearLayout
                android:layout_width="48dip"
                android:layout_height="64dip"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:src="@drawable/user" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="64dip"
                android:gravity="center_vertical"
                android:paddingLeft="6dip"
                android:text="User decided on demand"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textIsSelectable="false" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:tag="details">

            <LinearLayout
                android:layout_width="48dip"
                android:layout_height="64dip"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:src="@drawable/user_modified" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="64dip"
                android:gravity="center_vertical"
                android:paddingLeft="6dip"
                android:text="User changes the original decision"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textIsSelectable="false" />
        </LinearLayout>

        <!-- KO: change to show user cached -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:tag="details">

            <LinearLayout
                android:layout_width="48dip"
                android:layout_height="64dip"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:src="@drawable/user_cache" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="64dip"
                android:gravity="center_vertical"
                android:paddingLeft="6dip"
                android:text="Decision cached based on user decision"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textIsSelectable="false" />
        </LinearLayout>


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:tag="details">

                <LinearLayout
                    android:layout_width="48dip"
                    android:layout_height="64dip"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="32dip"
                        android:layout_height="32dip"
                        android:src="@drawable/timeout" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="64dip"
                    android:gravity="center_vertical"
                    android:paddingLeft="6dip"
                    android:text="User failed to decide within allotted time (timeout, default decision)"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textIsSelectable="false" />
         </LinearLayout>




    </LinearLayout>

</ScrollView>